<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="@string/contador_app"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/textoContador"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:text="@string/boton_cero"
            android:gravity="center"
            android:background="#E0E0E0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/botonIncremento"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:text="@string/boton_suma"/>
        <Button
            android:id="@+id/botonDecremento"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:text="@string/boton_resta"/>
        <Button
            android:id="@+id/botonReset"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:text="@string/reset"/>

    </LinearLayout>



</LinearLayout>
