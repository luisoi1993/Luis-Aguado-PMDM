<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- IMAGEN ORIGEN -->
        <ImageView
            android:id="@+id/imageViewVueloOrigen"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewVueloDestino"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.48"/>

        <!-- IMAGEN DESTINO -->
        <ImageView
            android:id="@+id/imageViewVueloDestino"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toEndOf="@id/imageViewVueloOrigen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.48"/>

        <!-- TEXTO ORIGEN -->
        <TextView
            android:id="@+id/textCiudadOrigen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Madrid"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewVueloOrigen"
            app:layout_constraintStart_toStartOf="@id/imageViewVueloOrigen"
            app:layout_constraintEnd_toEndOf="@id/imageViewVueloOrigen"/>

        <!-- TEXTO DESTINO -->
        <TextView
            android:id="@+id/textCiudadDestino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="París"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewVueloDestino"
            app:layout_constraintStart_toStartOf="@id/imageViewVueloDestino"
            app:layout_constraintEnd_toEndOf="@id/imageViewVueloDestino"/>

        <!-- BOTÓN DETALLE -->
        <Button
            android:id="@+id/btnDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textCiudadOrigen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnComparar"
            app:layout_constraintWidth_percent="0.45"/>

        <!-- BOTÓN FAVORITO -->
        <Button
            android:id="@+id/btnComparar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Favorito"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textCiudadDestino"
            app:layout_constraintStart_toEndOf="@id/btnDetalle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.45"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
